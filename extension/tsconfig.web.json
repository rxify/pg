{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"rootDir": "src",
		"module": "System",
		"target": "ES2020",
		"lib": [
			"ES2020",
			"DOM"
		],
		"removeComments": true,
		"outFile": "./out/webview.js",
		"downlevelIteration": true,
		"skipDefaultLibCheck": true,
		"isolatedModules": false,
		"resolveJsonModule": false
	},
	"include": [
		"src/run-sql-webview/webview/main.ts"
	],
	"exclude": [
		"**/.deprecated",
		"node_modules",
		".vscode-test",
		"src/webview/",
		"../node_modules"
	]
}